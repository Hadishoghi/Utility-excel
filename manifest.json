
{
    "manifest_version": 3,
    "name": "تبدیل تاریخ میلادی به شمسی",
    "version": "1.0",
    "description": "تاریخ میلادی را به شمسی تبدیل کرده و تعداد روز اضافه می‌کند.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
